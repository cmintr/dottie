# GCP Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCP_PROJECT_ID=your-gcp-project-id

# Server Configuration
PORT=8080
NODE_ENV=development

# Secret Manager
SECRET_MANAGER_SECRETS=AIRTABLE_API_KEY,TAVILY_API_KEY,VAPI_API_KEY,GOOGLE_MAPS_API_KEY

# OAuth 2.0 Configuration (for Google Workspace)
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/google/callback
GOOGLE_OAUTH_CLIENT_ID=your-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-oauth-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8080/api/auth/google/callback
SESSION_SECRET=your-session-secret

# Vertex AI Configuration
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL_NAME=gemini-pro

# External API Configuration
AIRTABLE_BASE_ID=your-airtable-base-id
TAVILY_API_KEY=your-tavily-api-key
VAPI_API_KEY=your-vapi-api-key
VAPI_ASSISTANT_ID=your-vapi-assistant-id
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,https://your-production-domain.com
